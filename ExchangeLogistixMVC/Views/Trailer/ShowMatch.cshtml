@using Microsoft.AspNet.Identity
@model IEnumerable<ExchangeLogistixMVC.Models.Trailer>

@{
    ViewBag.Title = "ShowMatch";
}

<h2>Match</h2>

<p>
    @Html.ActionLink("Return to My Trailer", "MyTrailer", new { psID = User.Identity.GetUserId() })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ChasisSize)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LoadSize)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NextLoadLocation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CurrentLoadDestination)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CurrentLoadETA)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ChasisSize)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LoadSize)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NextLoadLocation)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CurrentLoadDestination)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CurrentLoadETA)
        </td>
    </tr>
}

</table>
